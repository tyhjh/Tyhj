<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <LinearLayout 
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:orientation="vertical"
        >
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="5"
       />
  <com.example.shape.CircularImage 
      android:elevation="20dp"
    android:layout_marginLeft="20dp"
    android:id="@+id/head"
    android:paddingBottom="5dp"
    android:layout_width="75dp"
    android:layout_height="75dp"
    />
   <TextView 
       android:layout_width="3dp"
       android:layout_height="0dp"
       android:layout_weight="0.5"
          android:background="#339999"
          android:layout_marginLeft="56dp"
       />
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:background="#40666666"
      >
      <TextView 
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:gravity="center_vertical"
          android:layout_marginLeft="15dp"
          android:background="@drawable/psignature"
          />
      <TextView 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textColor="#339999"
          android:textSize="15sp"
          android:gravity="center_vertical|right"
          android:textStyle="bold|italic|normal"
          android:singleLine="true"
          android:id="@+id/pname"
          />
  </LinearLayout>
  </LinearLayout>
   <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="43dp"
      android:orientation="horizontal"
      >
      <EditText
          android:editable="false"
         android:descendantFocusability="afterDescendants"
  	    android:id="@+id/publish"
  	    android:layout_width="0dp"
  	    android:background="#ffffff"
  	    android:hint="永远相信美好的事情即将发生"
  	    android:paddingLeft="5dp"
  	    android:textSize="15sp"
  	    android:layout_height="match_parent"
  	    android:layout_weight="7"
  	    />
      <ImageButton 
             android:elevation="5dp" 
          android:id="@+id/addphotos"
          android:layout_width="0dp"
          android:background="#eeeeee"
          android:layout_height="match_parent"
          android:layout_weight="1"
          />
  </LinearLayout>
</LinearLayout>