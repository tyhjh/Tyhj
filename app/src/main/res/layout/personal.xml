<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0efefef"
    android:orientation="vertical" >
        <LinearLayout 
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6"
        >
   <TextView 
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="5"
       />
  <com.example.shape.CircularImage 
      android:elevation="30dp"
    android:layout_marginLeft="30dp"
    android:id="@+id/head"
    android:paddingBottom="1dp"
    android:layout_width="71dp"
    android:layout_height="71dp"
    />
   <TextView 
       android:layout_width="1dp"
       android:layout_height="0dp"
       android:layout_weight="0.5"
          android:background="#339999"
          android:layout_marginLeft="63dp"
       />
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:background="#40666666"
      >
      <TextView 
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:gravity="center_vertical"
          android:layout_marginLeft="12dp"
          android:background="@drawable/psignature"
          />
      <TextView 
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textColor="#339999"
          android:textSize="15sp"
          android:gravity="center_vertical|right"
          android:textStyle="bold|italic|normal"
          android:singleLine="true"
          android:id="@+id/pname"
          />
  </LinearLayout>
  </LinearLayout>
  //分割线
 <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="6"
      android:orientation="vertical"
      >
      //帖子
      <LinearLayout 
          android:background="#ffffff"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          >
          <ImageButton 
              android:id="@+id/myessay_sign"
              android:layout_width="40dp"
              android:layout_height="match_parent"
              android:background="#00000000"
              />
          <Button 
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:id="@+id/myessay"
                android:text="发表的说说"
              android:gravity="center_vertical"
              android:textSize="15sp"
              android:paddingLeft="10dp"
              android:background="#00000000"
              />
            <TextView 
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:background="@drawable/go"
              android:gravity="right"
               android:paddingRight="10dp"
              android:layout_gravity="center_vertical"
              />
      </LinearLayout>
       <TextView 
           android:elevation="0dp"
          android:layout_width="match_parent"
          android:layout_height="12dp"
          />
      //照片
       <LinearLayout 
           android:background="#ffffff"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          >
          <ImageButton 
              android:id="@+id/myphoto_sign"
              android:layout_width="40dp"
              android:layout_height="match_parent"
              android:background="#00000000"
              />
          <Button 
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:id="@+id/myphoto"
              android:text="相册"
              android:gravity="center_vertical"
              android:textSize="15sp"
              android:paddingLeft="10dp"
              android:background="#00000000"
              />
          <TextView 
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:background="@drawable/go"
              android:gravity="right"
              android:layout_gravity="center_vertical"
               android:paddingRight="10dp"
              />
      </LinearLayout>
       <TextView 
           android:elevation="0dp"
          android:layout_width="match_parent"
          android:layout_height="12dp"
          />
      //收藏
       <LinearLayout 
           android:padding="0dp"
             android:background="#ffffff"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          >
          <ImageButton 
              android:id="@+id/mylove_sign"
              android:layout_width="40dp"
              android:layout_height="match_parent"
              android:background="#00000000"
              />
          <Button 
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:id="@+id/mylove"
              android:background="#00000000"
                 android:text="我的收藏"
                     android:paddingLeft="10dp"
              android:gravity="center_vertical"
              android:textSize="15sp"
              />
           <TextView 
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:background="@drawable/go"
              android:layout_gravity="center_vertical"
               android:paddingRight="10dp"
              android:gravity="right"
              />
      </LinearLayout>
       <TextView 
           android:elevation="0dp"
          android:layout_width="match_parent"
          android:layout_height="12dp"
          />
      //留言
       <LinearLayout 
             android:background="#ffffff"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          >
          <ImageButton 
              android:id="@+id/myleftnote_sign"
              android:layout_width="40dp"
              android:background="#00000000"
              android:layout_height="match_parent"
              />
          <Button 
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:id="@+id/myleftnote"
              android:background="#00000000"
                 android:text="留言板"
              android:gravity="center_vertical"
              android:textSize="15sp"
                  android:paddingLeft="10dp"
              />
           <TextView 
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_gravity="center_vertical"
              android:background="@drawable/go"
              android:gravity="right"
              android:paddingRight="10dp"
              />
      </LinearLayout>
         <TextView 
           android:elevation="0dp"
          android:layout_width="match_parent"
          android:layout_height="12dp"
          />
        //设置
       <LinearLayout 
             android:background="#ffffff"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          >
          <ImageButton 
              android:id="@+id/set_sign"
              android:layout_width="40dp"
              android:background="#00000000"
              android:layout_height="match_parent"
              />
          <Button 
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="match_parent"
              android:id="@+id/set"
              android:background="#00000000"
                 android:text="个人设置"
              android:gravity="center_vertical"
              android:textSize="15sp"
                  android:paddingLeft="10dp"
              />
           <TextView 
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:layout_gravity="center_vertical"
              android:background="@drawable/go"
              android:gravity="right"
              android:paddingRight="10dp"
              />
      </LinearLayout>
  </LinearLayout>
</LinearLayout>